# Store Configuration
BASE_URL=https://example-store.com
STORE_NAME=Example Store

# Concurrency Settings
MAX_CONCURRENT_BOTS=5
BOT_DELAY_MIN=2
BOT_DELAY_MAX=8

# Affiliate Links (comma-separated)
AFFILIATE_LINKS=https://example-store.com/?ref=affiliate1,https://example-store.com/?ref=affiliate2,https://example-store.com/?ref=affiliate3

# Coupon Codes (comma-separated)
COUPON_CODES=WELCOME10,SAVE20,FIRSTORDER

# Browser Configuration
HEADLESS=false
SLOW_MO=100
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Human Simulation Settings
ACTION_DELAY_MEAN=1.5
ACTION_DELAY_STD=0.5
TYPING_DELAY_MIN=50
TYPING_DELAY_MAX=150

# CSS Selectors Hub
SELECTOR_ADD_TO_CART_BUTTON=button.button.product_type_simple.add_to_cart_button.ajax_add_to_cart
SELECTOR_CART_QUANTITY_INPUT=input.input-text.qty.text
SELECTOR_PROCEED_TO_CHECKOUT=a.checkout-button, .wc-proceed-to-checkout a
SELECTOR_BILLING_FIRST_NAME=#billing_first_name
SELECTOR_BILLING_LAST_NAME=#billing_last_name
SELECTOR_BILLING_EMAIL=#billing_email
SELECTOR_BILLING_PHONE=#billing_phone
SELECTOR_BILLING_COUNTRY=#billing_country
SELECTOR_BILLING_ADDRESS=#billing_address_1
SELECTOR_BILLING_STATE=#billing_state
SELECTOR_BILLING_CITY=#billing_city
SELECTOR_BILLING_POSTCODE=#billing_postcode
SELECTOR_COUPON_CODE_INPUT=#coupon_code
SELECTOR_APPLY_COUPON_BUTTON=button[name="apply_coupon"]
SELECTOR_PAYMENT_METHOD_COD=#payment_method_cod
SELECTOR_TERMS_CHECKBOX=#terms
SELECTOR_PLACE_ORDER_BUTTON=#place_order
SELECTOR_ORDER_RECEIVED=.woocommerce-order-received

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot_execution.log
